generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Measure {
  id String @id @default(uuid())

  date          DateTime
  type          String
  has_confirmed Boolean
  image_url     String
  customer_code String
  customer      Customer @relation(fields: [customer_code], references: [id], onDelete: Cascade)

  @@map("measure")
}

model Customer {
  id String @id @default(uuid())

  measures Measure[]

  @@map("customer")
}
